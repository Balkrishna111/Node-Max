extends ../layouts/main-layout.pug

block content
    main 
        h1 #{prod.title} 
        hr
        div 
            img(src=`${prod.imageUrl}`, alt=`${prod.title}`)
        h2 #{prod.price}
        p #{prod.description}
        form(action="/cart" method="post") 
            button(type="submit") Add to Cart
            input(type="hidden", name="productId" value=`${prod.id}`)