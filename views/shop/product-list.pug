extends ../layouts/main-layout.pug

block content
    div 
        if prods.length > 0
            h1 Here are your products. 
            each products in prods 
                h2 #{products.title}   
                img(src="https://timvandevall.com/wp-content/uploads/2014/01/Closed-Book-Clip-Art-Black-and-White.jpg", alt="book", height="200px", width="200px")             
                p $200
        else 
            h1 No products found.